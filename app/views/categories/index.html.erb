<h1>Main Feedback</h1>

<table class="table table-striped table-bordered table-hover ">
  <thead class="table-dark">
    <tr>
      <th>Category</th>
      <th>S0</th>
      <th>S1</th>
      <th>S2</th>
      <th>S3</th>
      <th>S4</th>
      <th>S5</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>

      <% if category.user == current_user %>
      <tr>
        <td><%= link_to category.name, category %></td>

        <td><%= category.s0 %></td>
        <td><%= category.s1 %></td>
        <td><%= category.s2 %></td>
        <td><%= category.s3 %></td>
        <td><%= category.s4 %></td>
        <td><%= category.s5 %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-sm btn-outline-success" %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Category', new_category_path, class:"btn btn-secondary" %>
